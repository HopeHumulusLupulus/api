{
	"name" : "vitormattos/tasca",
	"type" : "library",
	"description" : "Mapa Cervejeiro",
	"keywords" : [
		"framework",
		"silex",
		"rest",
		"api"
	],
	"homepage" : "http://github.com/vitormattos/tasca",
	"license" : "MIT",
	"authors" : [{
			"name" : "Vitor Mattos",
			"email" : "vitor.mattos@phprio.org"
		}
	],
	"require" : {
		"silex/silex" : "1.2.*dev",
		"monolog/monolog" : "1.12.*@dev",
		"doctrine/dbal" : "2.5.1",
		"robmorgan/phinx" : "dev-master",
		"nesbot/carbon" : "dev-master",
		"cocur/slugify" : "dev-master",
		"swiftmailer/swiftmailer": "^5.4",
		"zyberspace/telegram-cli-client": "^0.4.0"
	},
	"require-dev" : {
		"phpunit/phpunit" : "4.6.*@dev",
		"mockery/mockery" : "0.9.*@dev"
	},
	"autoload" : {
		"psr-0" : {
			"App" : "src/"
		}
	},
	"config": {
	   "vendor-dir": "../vendor"
    },
	"scripts": {
        "post-install-cmd": [
            "ln -sf $(pwd)/web ../"
        ],
        "post-update-cmd": [
            "ln -sf $(pwd)/web ../"
        ]
	}
}
